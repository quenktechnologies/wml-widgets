{% import (text) from "../../../" %}
{% import (Droplist) from "../" %}

{% view Main [V](Droplist[V]) %}
<select
  class={{@values.className}}
  onchange={{@values.onchange}}
  value={{@values.selected}}>

  <option disabled="true" selected>{{text(@values.instruction)}}</option>
  
  {% for opt,index:Number in @values.options %}

    <option value={{""+index}}>{{text(opt.title)}}</option>

  {% endfor %}

</select>

