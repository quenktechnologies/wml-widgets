{% import (Record) from "@quenk/noni/lib/data/record" %}
{% import (text) from "../../../" %}
{% import (DescriptionList,Title,Data) from "../../../layout/description-list" %}
{% import (PropertyList) from "../" %}

{% view Main [D,R:Record[D]](PropertyList[D,R]) %}

<DescriptionList ww:className={{@values.root.className}}>

  {% for field in @values.fields %}

    <Title>{{field.heading|text}}</Title>

    <Data>{{...@values.data.get(field)}}</Data>

  {% endfor %}

</DescriptionList>

