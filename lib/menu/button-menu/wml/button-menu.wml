import {Button} from "../../../control/button"
import {Menu} from "../../"
import {ButtonMenu} from "../ButtonMenu"

{% fun button (ButtonMenu) %}

  <Button 
    ww:class={{@values.button.class}}
    ww:onClick={{@values.button.onClick}} 
    ww:text={{@values.button.text}}/>

{% endfun %}

{% main (ButtonMenu) %}

<div class={{@values.root.class}}>

  {{<(@values.button.template)(@)>}}

  <Menu 
    wml:id={{@values.menu.id}}
    ww:hidden=true>{{@values.menu.content}}</Menu>

</div>
