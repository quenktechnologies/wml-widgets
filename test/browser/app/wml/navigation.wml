{% import (App) from "../app" %}
{% import (NavMenu) from "../../../../lib/menu/nav" %}
{% import (Item) from "../../../../lib/menu/item" %}
{% import (MenuHeader) from "../../../../lib/menu/header" %}
{% import (Link) from "../../../../lib/content/link" %}

{% view Navigation (App) %}

<NavMenu id="nav" vertical=true>

  <Item>

    <Link
      wml:group="links"
      ww:active={{@page == 'home'}}
      ww:name="home"
      ww:href="#"
      ww:onClick={{@navigate}}
      ww:text="Home" />

  </Item>

    {% for items, section of @pages %}

      <Item>

        <MenuHeader ww:text={{section}} />

        <NavMenu vertical=true>

          {% for _,name of items %}

            <Item>

              <Link
                wml:group="links"
                ww:name={{name}}
                ww:href={{"#/"+name}}
                ww:onClick={{@navigate}}
                ww:active={{@page == name}}
                ww:text={{name}} />

            </Item>
     
          {% endfor %}

        </NavMenu>

      </Item>

      {% endfor %}
    
</NavMenu>
