{% import (Row,Column) from "../../../../../lib/layout/grid" %}
{% import (TextInput) from "../../../../../lib/control/text-input" %}
{% import (RangedPager) from "../../../../../lib/control/ranged-pager" %}
{% import (Button) from "../../../../../lib/control/button" %}
{% import (Size) from "../../../../../lib/content/size" %}

{% import (Demo) from "../../widgets/demo" %}

{% view Main (RangedPagerPage from ".") %}
<Demo>

  <Row>

    <Column>

      <h3>Use the controls below to configure attributes.</h3>

      <p>
        Max: 
        
        <TextInput 
          ww:size={{Size.Small}}
          ww:name="max"
          ww:value={{String(@values.max)}}
          ww:onChange={{@values.onAttrChange}}/>

        Total:

        <TextInput 
          ww:size={{Size.Small}}
          ww:name="total"
          ww:value={{String(@values.total)}}
          ww:onChange={{@values.onAttrChange}}/>

        Current:

        <TextInput 
          ww:size={{Size.Small}}
          ww:name="current"
          ww:value={{String(@values.current)}}
          ww:onChange={{@values.onAttrChange}}/>

        <Button
          ww:text="Go"
          ww:onClick={{@values.reset}} />
      
      </p>

    </Column>

  </Row>

  <Row>

    <Column>

      <p>{{@values.message | text}}</p>

    </Column>

  </Row>

  <Row>

    <Column>

      <RangedPager
       max={{@values.max}}
       total={{@values.total}}
       current={{@values.current}} 
       onChange={{@values.onChange}} />

    </Column>

  </Row>

  

</Demo>
