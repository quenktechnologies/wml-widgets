{% import (Demo) from "../../../widgets/demo" %}
{% import (DropDown) from "../../../../../../lib/control/drop-down" %}
{% import (Link) from "../../../../../../lib/content/link" %}
{% import (Item,Divider) from "../../../../../../lib/menu/item" %}
{% import (DropDownPage) from "../" %}

{% view Main (DropDownPage) %}
<Demo>
  <p>
    <DropDown text="Click Me">
      <Item>
        <Link 
          href="#" 
          text="One"
          onClick={{@onClick('You clicked one')}}/>
      </Item>
      <Item>
        <Link
          href="#" 
          text="Two"
          onClick={{@onClick('You clicked two')}}/>
      </Item>
      <Divider/>
      <Item>
        <Link
          href="#"
          text="Three"
          onClick={{@onClick('You clicked three')}}/>
      </Item>
    </DropDown>

    <DropDown 
      text="Me Too"
      autoClose=false>
      <h1>Any flow content can go here!</h1>
    </DropDown>

    <DropDown 
      text="Can\'t touch this!"
      disabled=true>
      <p>You will never see this!</p>
    </DropDown>

    <DropDown 
      text="I am an anchor"
      anchor=true>
      <b>Content</b>
    </DropDown>

    <DropDown
      text="Auto"
      items={{@items}}/>
  </p>
</Demo>
