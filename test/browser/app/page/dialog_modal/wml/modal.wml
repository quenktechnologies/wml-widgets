{% import (Modal,ModalHeader,ModalBody,ModalFooter)
from "../../../../../../lib/dialog/modal" %}

{% import (Demo) from "../../../widgets/demo" %}
{% import (ModalPage) from "../" %}

{% view Main (ModalPage) %}
<Demo>

  <h1>Modals</h2>

  <p><button onclick={{@values.open}} >Open</button></p>

