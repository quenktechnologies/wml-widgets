{% import (Demo) from "../../../widgets/demo" %}
{% import (DropList) from "../../../../../../lib/control/drop-list" %}
{% import (DropListPage) from "../" %}

{% view Main (DropListPage) %}

<Demo>

  <Demo>

    <b>Normal</b>

    <p>
    
      <DropList 
       wml:id={{@values.normal.name}}
       name={{@values.normal.name}}
       value={{@values.normal.value}}
       options={{@values.normal.options}}
       onSelect={{@values.normal.onSelect}} />

    </p>

  </Demo>

  <Demo>

    <b>Success</b>

    <p>

      <DropList 
      wml:id={{@values.success.id}}
      className="-success"
      name={{@values.success.name}}
      options={{@values.success.options}}
      onSelect={{@values.success.onSelect}} />

    </p>

  </Demo>

  <Demo>

    <b>Warning</b>

    <p>

      <DropList 
      wml:id={{@values.warning.id}}
      className="-warning"
      name={{@values.warning.name}}
      options={{@values.warning.options}}
      onSelect={{@values.warning.onSelect}} />

    </p>

  </Demo>

  <Demo>

    <b>Error</b>

    <p>
    
      <DropList 
      wml:id={{@values.error.id}}
      className="-error"
      name={{@values.error.name}}
      options={{@values.error.options}}
      onSelect={{@values.error.onSelect}} />

    </p>

  </Demo>

  <Demo>

    <p>
    
      <b>Disabled</b>

      <DropList 
        name={{@values.normal.name}}
        disabled=true
        onSelect={{@values.normal.onSelect}} />

    </p>

  </Demo>



  <Demo>

    <p>
    
      <b>Block</b>

      <DropList 
      wml:id={{@values.block.id}}
      className="-block"
      name={{@values.block.name}}
      block={{true}}
      onSelect={{@values.block.onSelect}} />

    </p>

  </Demo>

</Demo>
