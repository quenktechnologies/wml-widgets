{% import (Demo) from "../../../widgets/demo" %}
{% import (Button) from "../../../../../../lib/control/button" %}
{% import (ButtonPage) from "../" %}

{% view Main (ButtonPage) %}
<Demo>

  <Demo>

      <h1>Buttons</h2>

      <p>

        <h2>Style</h2>

        {% for v in @values.styles %}

          <Button 
            name={{v}}
            style={{v}}
            text={{v|@values.capitalize}} />

        {% endfor %}

      </p>

   </Demo>

   <Demo>

    <h2>Outline</h2>

      {% for style in @values.styles %}

        <Button 
         style={{style}}
         outline=true
         text={{style|@values.capitalize}} />

      {% endfor %}

    </Demo>

    <Demo>

      <p>

        <h2>Active</h2>

          {% for v in @values.styles %}

            <Button 
             name={{v}}
             active=true
             style={{v}}
             text={{v|@values.capitalize}} />

          {% endfor %}

      </p>

    </Demo>

    <Demo>

      <p>

        <h2>Disabled</h2>

          {% for v in @values.styles %}

            <Button 
             name={{v}}
             disabled=true
             style={{v}}
             text={{v|@values.capitalize}} />

          {% endfor %}

      </p>

    </Demo>

    <Demo>

      <h2>Size</h2>

        {% for style in @values.styles %}

          <p>
              
              {% for size in @values.sizes %}

                <Button 
                name={{size}}
                style={{style}}
                size={{size}}
                text={{size|@values.capitalize}} />

              {% endfor %}

            </p>

          {% endfor %}

    </Demo>

    <Demo>

        <h2>Block</h2>

          {% for style in @values.styles %}

              <Button 
               style={{style}}
               block=true
               text={{style|@values.capitalize}} />

          {% endfor %}

    </Demo>

    <Demo>

        <h2>Block</h2>

          {% for style in @values.styles %}

              <Button 
               style={{style}}
               block=true
               text={{style|@values.capitalize}} />

          {% endfor %}

    </Demo>

    <Demo>
      <h2>Icon Url</h2>
      <Button icon="icon.svg" />
      <Button 
        icon="icon.svg"
        text="Icon" />
    </Demo>

    <Demo>
      <h2>Icon SVG</h2>
      <Button 
        icon={{Icon({})}} />
      <Button 
        icon={{Icon({})}}
        text="Icon" />
    </Demo>

</Demo>

{% view Icon (Object) %}
