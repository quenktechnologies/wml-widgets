{% import (Demo) from "../../../widgets/demo" %}
{% import (Switch) from "../../../../../../lib/control/switch" %}
{% import (SwitchPage) from "../" %}

{% view Main (SwitchPage) %}
 
<Demo>

  <Demo>

    <p>The switch is already set.</p>

    <p>
      <Switch 
        name="switch"
        value={{true}}/>
    </p>

  </Demo>

  <Demo>

    <p>The switch is <b wml:id="content">untouched</b>.</p>

    <p>
      <Switch 
        name="switch"
        onChange={{@onChange}} />
    </p>

  </Demo>

</Demo>
