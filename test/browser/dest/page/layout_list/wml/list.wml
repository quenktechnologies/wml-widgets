{% import (Demo) from "../../../widgets/demo" %}
{% import (ListLayout, ListLayoutItem) from "../../../../../../lib/layout/list" %}
{% import (ListLayoutPage) from "../" %}

{% view Main (ListLayoutPage) %}
 
<Demo>

   <ListLayout>

    {% for yes,key of @items %}

      <ListLayoutItem 
        wml:id={{key}} 
        ww:name={{key}}
        ww:active={{yes}} 
        ww:onClick={{@click}}>

        <p>{{document.createTextNode(key)}}</p>

      </ListLayoutItem>

     {% endfor %}

   </ListLayout>

</Demo>
