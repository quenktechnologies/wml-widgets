     stringifier={{@values.warning.stringifier}}
     onSearch={{@values.warning.onSearch}}
     onChange={{@values.warning.onChange}} />

  </Demo>

  <Demo>

    <Select 
     wml:id={{@values.error.id}}
     name={{@values.error.name}}
     label={{@values.error.label}}
     error={{@values.error.message}}
     stringifier={{@values.error.stringifier}}
     onSearch={{@values.error.onSearch}}
     onChange={{@values.error.onChange}} />

  </Demo>

  <Demo>

    <Select 
     wml:id={{@values.block.id}}
     name={{@values.block.name}}
     label={{@values.block.label}}
     block={{true}}
     stringifier={{@values.block.stringifier}}
     onSearch={{@values.block.onSearch}}
     onChange={{@values.block.onChange}} />

  </Demo>

  <Demo>

    <Select 
     name={{@values.normal.name}}
     label="Disabled"
     disabled=true
     stringifier={{@values.normal.stringifier}}
     onSearch={{@values.normal.onSearch}}
     onChange={{@values.normal.onChange}} />

  </Demo>

  <Demo>

    <Select 
     name={{@values.normal.name}}
     label="Disabled with value"
     value={{@values.normal.value}}
     disabled=true
     stringifier={{@values.normal.stringifier}}
     onSearch={{@values.normal.onSearch}}
     onChange={{@values.normal.onChange}} />

  </Demo>

