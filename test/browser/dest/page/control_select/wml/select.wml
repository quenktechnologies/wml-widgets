{% import (Demo) from "../../../widgets/demo" %}
{% import (Select) from "../../../../../../lib/control/select" %}
{% import (SelectPage) from "../" %}

{% view Main (SelectPage) %}

<Demo>

  <Demo>

    <Select 
     wml:id={{@values.normal.id}}
     name={{@values.normal.name}}
     label={{@values.normal.label}}
     value={{@values.normal.value}}
     stringifier={{@values.normal.stringifier}}
     onSearch={{@values.normal.onSearch}}
     onChange={{@values.normal.onChange}} />

  </Demo>

  <Demo>

    <Select 
     wml:id={{@values.success.id}}
     name={{@values.success.name}}
     label={{@values.success.label}}
     success={{@values.success.message}}
     stringifier={{@values.success.stringifier}}
     onSearch={{@values.success.onSearch}}
     onChange={{@values.success.onChange}} />

  </Demo>

  <Demo>

    <Select 
     wml:id={{@values.warning.id}}
     name={{@values.warning.name}}
     label={{@values.warning.label}}
