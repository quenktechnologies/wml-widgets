{% import (Demo) from "../../../widgets/demo" %}
{% import (DropDown) from "../../../../../../lib/control/drop-down" %}
{% import (Menu) from "../../../../../../lib/menu/menu" %}
{% import (Item,Divider) from "../../../../../../lib/menu/item" %}
{% import (DropDownPage) from "../" %}

{% view Main (DropDownPage) %}
<Demo>

  <p>

    <DropDown 
      buttonText="Click Me">

      <Menu>

        <Item>
          <a href="#" onclick={{@onClick('You clicked one')}}>One</a>
        </Item>

        <Item>
          <a href="#" onclick={{@onClick('You clicked two')}}>Two</a>
        </Item>

        <Divider/>

        <Item>
          <a href="#" onclick={{@onClick('You clicked three')}}>Three</a>
        </Item>

      </Menu>

    </DropDown>

    <DropDown 
      buttonText="Me Too"
      autoClose=false>

      <h1>Any flow content can go here!</h1>

    </DropDown>

    <DropDown 
      buttonText="Can\'t touch this!"
      disabled=true>

      <p>You will never see this!</p>

    </DropDown>

    <DropDown 
      buttonText="I am an anchor"
      anchor=true>

      <b>Content</b>

    </DropDown>

  </p>

</Demo>
