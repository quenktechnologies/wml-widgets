{% import (App) from "../app" %}
{% import (NavMenu) from "../../../../lib/menu/nav" %}
{% import (Item) from "../../../../lib/menu/item" %}
{% import (MenuHeader) from "../../../../lib/menu/header" %}
{% import (Link) from "../../../../lib/content/link" %}

{% view Navigation (App) %}

<NavMenu id="nav" vertical=true>

  <Item>

    <Link
      wml:group="links"
      active={{@page == 'home'}}
      name="home"
      href="#"
      onClick={{@navigate}}
      text="Home" />

  </Item>

    {% for items, section of @pages %}

      <Item>

        <MenuHeader text={{section}} />

        <NavMenu vertical=true>

          {% for _,name of items %}

            <Item>

              <Link
                wml:group="links"
                name={{name}}
                href={{"#/"+name}}
                onClick={{@navigate}}
                active={{@page == name}}
                text={{name}} />

            </Item>
     
          {% endfor %}

        </NavMenu>

      </Item>

      {% endfor %}
    
</NavMenu>
