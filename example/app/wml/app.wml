import {Drawer} from "../../../lib/layout/drawer"
import {ActionBar} from "../../../lib/app/action-bar"
import {App} from "../app"
import {IconButton} from "../../../lib/control/icon-button"
import {Dash} from "../../../lib/app/dash"
import {Main as MainLayout} from "../../../lib/layout/main"

{% main (App) %}

<Drawer
  wml:id={{@values.id.layout}}
  ww:drawer={{@navigation}}>

  <ActionBar>

    <IconButton 
      ww:name="toggle"
      ww:onClick={{@toggleDrawer}}>

      <Dash/>
      <Dash/>
      <Dash/>

    </IconButton>

  </ActionBar>

  <MainLayout>
    {% if @content %}
      {{@content.render()}}
    {% else %}
      {{''}}
    {% endif %}
  </MainLayout>

</Drawer>
