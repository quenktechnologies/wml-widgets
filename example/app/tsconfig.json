{
    "compilerOptions": {
        "baseUrl": "src",
        "lib": ["ES2015", "DOM"],
        "module": "commonjs",
        "target": "es5",
        "rootDirs": [".", "../build"],
        "moduleResolution": "node",
        "allowUnreachableCode": true,
        "noUnusedParameters": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "declaration": true,
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules"]

}
