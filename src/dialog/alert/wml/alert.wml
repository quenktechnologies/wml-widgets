{% import (Close) from "../../../content/close" %}
{% import (Alert) from "../" %}

{% view Main (Alert) %}
<div 
  wml:id={{@values.wml.id}}
  id={{@values.id}}
  class={{@values.className}}>

  {{...@values.content}}

  {% if @values.closable %}

    <Close onClick={{->@close()}} />

  {% else %}

    {{ '' | text }}

  {% endif %}
  
</div>
