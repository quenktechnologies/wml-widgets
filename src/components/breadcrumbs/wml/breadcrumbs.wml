import {combine} from 'wml-widgets-common/util'
import * as Styles from 'wml-widgets-common/Styles';

{% view BreadCrumbs %}

  <ol class={{combine([Styles.BREAD_CRUMBS, @.read('ww:class')])}}>

    {{ this.children }}

  </ol>

{% endview %}

{% view Crumb %}

  <li 
   class={{combine([Styles.BREAD_CRUMBS_CRUMB, @.read('ww:class')])}}>
   
    <a 
    class={{@.read('ww:anchorClass', null)}} 
    href={{@.read('ww:href')}}>{{this.children}}</a>
   
   </li>

{% endview %}

